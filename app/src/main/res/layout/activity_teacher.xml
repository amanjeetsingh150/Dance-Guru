<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.developers.danceguru.TeacherActivity">

        <com.developers.danceguru.CustomViews.Human
            android:id="@+id/human"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp" />

        <Button
            android:id="@+id/right_hand_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/human"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Right Hand" />

        <Button
            android:id="@+id/left_hand_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/right_hand_button"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:text="Left Hand" />

        <Button
            android:id="@+id/left_leg_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/left_hand_button"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Left Leg" />

        <Button
            android:id="@+id/right_leg_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/left_leg_button"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Right Leg" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/right_leg_button"
            android:text="Submit"
            android:id="@+id/submit_button"
            android:textAllCaps="false"
            android:textSize="16sp"
            fancy:fb_defaultColor="@color/colorAccent"
            fancy:fb_radius="50dp"
            fancy:fb_textColor="#FFF"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"/>
    </RelativeLayout>
</ScrollView>