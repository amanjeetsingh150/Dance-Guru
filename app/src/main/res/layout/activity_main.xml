<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.developers.danceguru.MainActivity">

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/teacher_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Teacher"
        android:textAllCaps="false"
        android:textSize="16sp"
        fancy:fb_defaultColor="@color/colorAccent"
        fancy:fb_radius="50dp"
        fancy:fb_textColor="#FFF" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/student_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Student"
        android:textAllCaps="false"
        android:layout_below="@+id/teacher_button"
        android:textSize="16sp"
        fancy:fb_defaultColor="@color/colorAccent"
        fancy:fb_radius="50dp"
        fancy:fb_textColor="#FFF"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignEnd="@+id/teacher_button"
        android:layout_alignStart="@+id/teacher_button" />

</RelativeLayout>
